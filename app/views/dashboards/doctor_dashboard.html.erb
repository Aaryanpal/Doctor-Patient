<div class="grid grid-cols-1 gap-2 px-2 py-2 sm:grid-cols-2 md:grid-cols-3">
  <div class="w-50% flex h-40 flex-col justify-between rounded-2xl bg-sky-500 p-4 shadow-xl">
    <div class="flex items-start justify-between">
      <h2 class="text-xl font-semibold text-white">New Users</h2>
      <%=render_icon "users",classes: "h-6 w-6 text-white"%>
    </div>

    <div class="flex items-baseline space-x-2">
      <h3 class="text-2xl font-bold text-white">800</h3>
    </div>

    <div class="flex items-center space-x-1 text-sm text-green-300">
      <span>+1200</span>
      <span class="text-white">Number of users</span>
    </div>
  </div>
  <div class="w-50% h-40 rounded-xl bg-gray-300">
    <div class="w-50% flex h-40 flex-col justify-between rounded-2xl bg-sky-500 p-4 shadow-xl">
      <div class="flex items-start justify-between">
        <h2 class="text-xl font-semibold text-white">Sales</h2>
        <%=render_icon "money",classes: "h-6 w-6 text-white"%>
      </div>

      <div class="flex items-baseline space-x-2">
        <h3 class="text-2xl font-bold text-white">₹54,000</h3>
      </div>

      <div class="flex items-center space-x-1 text-sm text-green-300">
        <span>+20.9₹</span>
        <span class="text-white">Number of sales</span>
      </div>
    </div>
  </div>
  <div class="w-50% h-40 rounded-xl bg-gray-300">
    <div class="w-50% flex h-40 flex-col justify-between rounded-2xl bg-sky-500 p-4 shadow-xl">
      <div class="flex items-start justify-between">
        <h2 class="text-xl font-semibold text-white">Repeat User</h2>
     <%=render_icon "user",classes: "h-6 w-6 text-white"%>
      </div>

      <div class="flex items-baseline space-x-2">
        <h3 class="text-2xl font-bold text-white">200</h3>
   

      </div>
      <div class="flex items-center space-x-1 text-sm text-green-300">
        <span>+50</span>
        <span class="text-white">Number of repeat user</span>
      </div>
    </div>
  </div>
</div>



<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 px-4 py-4 leading-10">
  <div class="border-sky-500 sm:col-span-2 h-60 w-auto w-full rounded-xl border bg-transparent p-4">
  <canvas class="w-full h-full"
      data-controller="chart"
      data-chart-data-value="<%= @chart_data.to_json %>"
      data-chart-options-value="<%= @chart_options.to_json %>"
  ></canvas>
  </div>
  <div class="border-sky-500 h-60 w-full rounded-xl border bg-transparent p-4">
  <canvas class="w-full h-full"
    data-controller="chart"
    data-chart-type-value="doughnut"
    data-chart-data-value="<%= @chart_circle_data.to_json %>"
    data-chart-options-value="<%= @chart_circle_options.to_json %>">
  </canvas>
  </div>
</div>
